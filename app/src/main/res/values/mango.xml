<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Orange Crush application theme. -->
    <style name="Mango.Theme.DiecastHangar" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorBackgroundFloating">@color/orange_crush_background_floating</item>
        <item name="background">@color/orange_crush_background</item>
        <item name="android:buttonStyleToggle">@color/orange_crush_text</item>
        <item name="colorOutline">@color/orange_crush_accent</item>
        <item name="android:textColor">@color/orange_crush_text</item>
        <item name="android:textColorHint">@color/orange_crush_text</item>
        <item name="android:colorAccent">@color/orange_crush_button</item>

        <!--toggle button group highlight -->
        <item name="colorSecondaryContainer">@color/orange_crush_button</item>

        <item name="colorPrimary">@color/orange_crush_button</item>


        <item name="materialButtonStyle">@style/materialButtonStyleMango</item>
        <item name="materialButtonOutlinedStyle">@style/outlinedButtonStyleMango</item>
        <item name="borderlessButtonStyle">@style/borderlessButtonStyleMango</item>

        <!-- main icon color -->
        <item name="android:icon">@color/orange_crush_button</item>
        <item name="colorIconButton">@color/orange_crush_button</item>
        <item name="colorFabMain">@color/orange_crush_button</item>
        <item name="colorButton">@color/orange_crush_button</item>
        <item name="color40">@color/orange_crush_button</item>
        <item name="color60">@color/material_dynamic_tertiary60</item>
        <item name ="switchStyle">@style/switchOrangeCrush</item>

        <item name="colorOnButton">@color/white</item>
        <item name="colorOnPrimaryContainer">@color/white</item>
        <!-- faint icon color -->
        <item name="colorFaintButton">@color/material_dynamic_tertiary60</item>
    </style>

    <style name="materialButtonStyleMango" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/orange_crush_button</item>
        <item name="background">@color/orange_crush_button</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:tint">@color/white</item>
    </style>

    <style name="borderlessButtonStyleMango" parent="Widget.Material3.Button.TextButton">
        <item name="android:textColor">@color/orange_crush_button</item>
        <item name="android:icon">@color/orange_crush_button</item>
    </style>

    <style name="reactionStyleMango" parent="Widget.Material3.Button.TextButton">
        <item name="android:textColor">@color/orange_crush_button</item>
        <item name="android:icon">@color/orange_crush_button</item>
    </style>

    <style name="outlinedButtonStyleMango" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:textColor">@color/orange_crush_button</item>
    </style>

    <style name="switchOrangeCrush" parent="Widget.MaterialComponents.CompoundButton.Switch">
        <item name="colorSurfaceVariant">@color/orange_crush_background_floating</item>
        <item name="colorOnPrimary">@color/orange_crush_background_floating</item>
        <item name="colorPrimary">@color/orange_crush_button</item>
        <item name="colorOutline">@color/orange_crush_accent</item>
    </style>

    <style name="MangoThemeOverlay.DiecastHangar.FullscreenContainer" parent="">
    </style>
</resources>