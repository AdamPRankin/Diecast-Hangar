<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Royal application theme. -->
    <style name="Royal.Theme.DiecastHangar" parent="Theme.Material3.DayNight.NoActionBar">

        <item name="colorBackgroundFloating">@color/royal_background_floating</item>
        <item name="background">@color/royal_background</item>
        <item name="android:buttonStyleToggle">@color/royal_text</item>
        <item name="colorOutline">@color/royal_accent</item>
        <item name="android:textColor">@color/royal_text</item>
        <item name="android:textColorHint">@color/royal_text</item>
        <item name="android:colorAccent">@color/royal_button</item>

        <item name="colorSecondaryContainer">@color/royal_button</item>

        <item name="colorPrimary">@color/royal_button</item>
        <item name="android:statusBarColor">@color/royal_button</item>

        <item name="radioButtonStyle">@style/outlinedButtonStyleMango</item>


        <item name="materialButtonStyle">@style/materialButtonStyleRoyal</item>
        <item name="materialButtonOutlinedStyle">@style/outlinedButtonStyleRoyal</item>
        <item name="borderlessButtonStyle">@style/borderlessButtonStyleRoyal</item>

        <!-- main icon color -->
        <item name="android:icon">@color/royal_button</item>
        <item name="colorIconButton">@color/royal_button</item>
        <item name="colorFabMain">@color/royal_button</item>
        <item name="colorButton">@color/royal_button</item>
        <item name ="switchStyle">@style/switchRoyal</item>

        <item name="colorOnButton">@color/white</item>
        <item name="colorOnPrimaryContainer">@color/white</item>

        <!-- faint icon color -->
        <item name="colorFaintButton">@color/royal_button</item>
    </style>

    <style name="materialButtonStyleRoyal" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/royal_button</item>
        <item name="background">@color/royal_button</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:tint">@color/white</item>
    </style>

    <style name="borderlessButtonStyleRoyal" parent="Widget.Material3.Button.TextButton">
        <item name="android:textColor">@color/royal_button</item>
        <item name="android:icon">@color/royal_button</item>
    </style>

    <style name="outlinedButtonStyleRoyal" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:textColor">@color/royal_button</item>
    </style>

    <style name="switchRoyal" parent="Widget.MaterialComponents.CompoundButton.Switch">
        <item name="colorSurfaceVariant">@color/royal_background_floating</item>
        <item name="colorOnPrimary">@color/royal_background_floating</item>
        <item name="colorPrimary">@color/royal_button</item>
        <item name="colorOutline">@color/royal_accent</item>
    </style>
</resources>