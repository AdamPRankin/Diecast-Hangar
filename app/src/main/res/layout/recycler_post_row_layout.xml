<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="horizontal"
        android:gravity="center">
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_post_img_left"
        android:layout_width="36dp"
        android:layout_height="match_parent"
        android:padding="0dp"
        style="?attr/borderlessButtonStyle"
        android:text="-" />
    <ImageView
        android:id="@+id/post_picture"
        android:layout_width="276dp"
        android:layout_height="184dp"
        tools:srcCompat="@tools:sample/backgrounds/scenic"
        android:layout_gravity="center"/>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_post_img_right"
        android:layout_width="36dp"
        android:layout_height="match_parent"
        android:padding="0dp"
        style="?attr/borderlessButtonStyle"
        android:text="-" />
        </LinearLayout>
        </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/post_profile"
                android:layout_width="48dp"
                android:layout_height="48dp"
                tools:srcCompat="@drawable/img" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <TextView
                android:id="@+id/post_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Brandon"
                android:textSize="18sp"
                android:layout_marginStart="8dp"
                tools:ignore="HardcodedText" />
            <TextView
                android:id="@+id/post_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="October 14th, 2022"
                android:layout_marginStart="8dp"
                tools:ignore="HardcodedText" />

            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/post_body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxHeight="250dp"
            android:text="@string/lorem_ipsum"
            app:layout_constraintEnd_toEndOf="@+id/post_picture"
            app:layout_constraintStart_toStartOf="@+id/post_picture"
            app:layout_constraintTop_toBottomOf="@+id/post_picture" />

    </LinearLayout>

    <!-- Buttons -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:orientation="horizontal">
        <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="comment"
            />
        <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="like"
            style="?attr/borderlessButtonStyle"
            />
    </LinearLayout>



</LinearLayout>

</com.google.android.material.card.MaterialCardView>





