<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/post_photo_container"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="horizontal"
        android:gravity="center">
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_post_img_left"
        android:layout_width="36dp"
        android:layout_height="match_parent"
        android:padding="0dp"
        app:icon="@drawable/chevron_left"
        app:iconGravity="textStart"
        app:iconTint="@color/material_dynamic_primary20"
        style="?attr/borderlessButtonStyle" />
    <ImageView
        android:id="@+id/post_picture"
        android:layout_width="276dp"
        android:layout_height="184dp"
        tools:srcCompat="@tools:sample/backgrounds/scenic"
        android:layout_gravity="center"
        android:contentDescription="TODO" />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_post_img_right"
        android:layout_width="36dp"
        android:layout_height="match_parent"
        android:padding="0dp"
        app:icon="@drawable/chevron_right"
        app:iconGravity="textStart"
        app:iconTint="@color/material_dynamic_primary20"
        style="?attr/borderlessButtonStyle" />
        </LinearLayout>
        </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/post_avatar"
                android:layout_width="48dp"
                android:layout_height="48dp"
                tools:srcCompat="@drawable/img"
                android:contentDescription="TODO" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <TextView
                android:id="@+id/post_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Brandon"
                android:textSize="18sp"
                android:layout_marginStart="8dp"
                tools:ignore="HardcodedText" />
            <TextView
                android:id="@+id/post_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="October 14th, 2022"
                android:layout_marginStart="8dp"
                tools:ignore="HardcodedText" />

            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/post_body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxHeight="250dp"
            android:text="@string/lorem_ipsum"
            app:layout_constraintEnd_toEndOf="@+id/post_picture"
            app:layout_constraintStart_toStartOf="@+id/post_picture"
            app:layout_constraintTop_toBottomOf="@+id/post_picture" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/post_btn_show_more"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:padding="0dp"
            android:text="@string/show_more"
            style="?attr/borderlessButtonStyle"
            />
    </LinearLayout>

    <!-- Buttons -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:orientation="horizontal">
        <com.google.android.material.button.MaterialButton
            android:id="@+id/post_btn_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="@string/comment"
            />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/post_btn_react"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/react"
            style="?attr/borderlessButtonStyle"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/post_reactions_layout"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/post_reacts_1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:ignore="ContentDescription"
                    android:src="@drawable/ic_airplane_black_48dp"
                    app:tint="@color/material_dynamic_tertiary40">
                </ImageView>
                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/post_reaction1_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/material_dynamic_tertiary30">

                    </TextView>
                </FrameLayout>
            </FrameLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/post_reacts_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:ignore="ContentDescription"
                    app:tint="@color/material_dynamic_tertiary40">

                </ImageView>
                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/post_reaction2_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/material_dynamic_tertiary30">

                    </TextView>
                </FrameLayout>
            </FrameLayout>
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/post_reacts_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:ignore="ContentDescription"
                    app:tint="@color/material_dynamic_tertiary40">

                </ImageView>
                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/post_reaction3_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1"
                        tools:ignore="HardcodedText"
                        android:textColor="@color/material_dynamic_tertiary30">

                    </TextView>
                </FrameLayout>
            </FrameLayout>
        </LinearLayout>
    </LinearLayout>



</LinearLayout>

    <FrameLayout
        android:id="@+id/reactionsFrameLayout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        tools:ignore="UselessLeaf" />

</com.google.android.material.card.MaterialCardView>





