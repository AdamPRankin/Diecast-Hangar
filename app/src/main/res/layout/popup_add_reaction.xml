<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/reaction_layout"
    tools:ignore="HardcodedText">

    <LinearLayout
        android:id="@+id/reacts_linear_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="0dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/reaction_plane"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:src="@drawable/airplane"
            app:tint="?android:icon"
            android:contentDescription="plane" />
        <ImageView
            android:id="@+id/reaction_landing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:src="@drawable/airplane_landing"
            app:tint="?android:icon"
            android:contentDescription="landing" />
        <ImageView
            android:id="@+id/reaction_takeoff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:src="@drawable/airplane_takeoff"
            app:tint="?android:icon"
            android:contentDescription="takeoff" />
        <ImageView
            android:id="@+id/reaction_walking"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:src="@drawable/walk"
            app:tint="?android:icon"
            android:contentDescription="walking" />
        <ImageView
            android:id="@+id/reaction_fire"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:src="@drawable/fire"
            app:tint="?android:icon"
            android:contentDescription="fire" />
        <ImageView
            android:id="@+id/reaction_trash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:src="@drawable/trash_can"
            app:tint="?android:icon"
            android:contentDescription="trash" />
    </LinearLayout>

</com.google.android.material.card.MaterialCardView>