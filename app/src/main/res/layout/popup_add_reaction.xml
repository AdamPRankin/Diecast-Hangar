<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/reaction_layout">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/reaction_plane"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="ContentDescription"
            android:layout_marginEnd="8dp"
            android:src="@drawable/airplane"
            app:tint="@color/material_dynamic_tertiary40"/>
        <ImageView
            android:id="@+id/reaction_landing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="ContentDescription"
            android:layout_marginEnd="8dp"
            android:src="@drawable/airplane_landing"
            app:tint="@color/material_dynamic_tertiary40"/>
        <ImageView
            android:id="@+id/reaction_takeoff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="ContentDescription"
            android:src="@drawable/airplane_takeoff"
            app:tint="@color/material_dynamic_tertiary40"/>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>