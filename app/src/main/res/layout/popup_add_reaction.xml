<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/reaction_layout">

    <LinearLayout
        android:id="@+id/reacts_linear_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="0dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/reaction_plane"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:src="@drawable/airplane"
            app:tint="@color/material_dynamic_tertiary40"
            android:contentDescription="@string/plane" />
        <ImageView
            android:id="@+id/reaction_landing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:src="@drawable/airplane_landing"
            app:tint="@color/material_dynamic_tertiary40"
            android:contentDescription="@string/landing" />
        <ImageView
            android:id="@+id/reaction_takeoff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:src="@drawable/airplane_takeoff"
            app:tint="@color/material_dynamic_tertiary40"
            android:contentDescription="@string/takeoff" />
        <ImageView
            android:id="@+id/reaction_walking"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:src="@drawable/walk"
            app:tint="@color/material_dynamic_tertiary40"
            android:contentDescription="@string/walking" />
        <ImageView
            android:id="@+id/reaction_fire"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:src="@drawable/fire"
            app:tint="@color/material_dynamic_tertiary40"
            android:contentDescription="@string/fire" />
        <ImageView
            android:id="@+id/reaction_trash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:src="@drawable/trash_can"
            app:tint="@color/material_dynamic_tertiary40"
            android:contentDescription="@string/trash" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>